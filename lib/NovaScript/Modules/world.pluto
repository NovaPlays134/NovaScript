local function round(num, dp)
    local mult = 10^(dp or 0)
    return math.floor(num * mult + 0.5) / mult
end

local function format_money(money)
    if money >= 1000 and money < 999950 then
        return round(money / 1000, 1) .. "K"
    elseif money >= 999950 and money < 999999950 then
        return round(money / 1000000, 1) .. "M"
    elseif money >= 999999950 then
        return round(money / 1000000000, 1) .. "B"
    else return money
    end
end

local function get_targeted_ent_of_type(vehicles, peds, objects)
    local ent_tables = {
        vehicles ? entities.get_all_vehicles_as_pointers() : nil,
        peds ? entities.get_all_peds_as_pointers() : nil,
    }

    local cam_pos = get_final_rendered_cam_coord()
    local cam_dir = get_final_rendered_cam_rot():toDir()

    local closest = {}
    for i, ent_table in ent_tables do
        for i = 1, #ent_table, 1 do
            local ent_dir = entities.get_position(ent_table[i])
            ent_dir:sub(cam_pos)
            ent_dir:normalise()
            local dot = cam_dir:dot(ent_dir)

            if dot > 0.2 and ent_table[i] != players.user_ped() then
                table.insert(closest, {ent = ent_table[i], dist = dot})
            end
        end
    end

    table.sort(closest, function (a, b)
        return a.dist > b.dist
    end)

    for i, value in closest do
        local ent = entities.pointer_to_handle(value.ent)
        if has_entity_clear_los_to_entity(players.user_ped(), ent, 17) then
            return ent
        else
            return nil
        end
    end
end

