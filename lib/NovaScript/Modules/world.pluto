            else
                directx.draw_text(position.x, position.y, hacking_texts.vehicle_no_pas[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                entity_mode = "vehicle_no_pas"
            end
        end
    end

    if entity_mode != nil then
        return entity_mode
    else
        return nil
    end
end

