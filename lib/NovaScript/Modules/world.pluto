local function draw_world_hacking_text(positions, entity)
    local entity_mode
    for i, position in positions do
        if is_entity_a_ped(entity) and not is_ped_a_player(entity) then
            if is_ped_in_any_vehicle(entity, true) then
                directx.draw_text(position.x, position.y, hacking_texts.vehicle[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                entity_mode = "vehicle"
            else
                directx.draw_text(position.x, position.y, hacking_texts.ped[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                entity_mode = "ped"
            end
        end
        if is_entity_a_ped(entity) and is_ped_a_player(entity) then
            if is_ped_in_any_vehicle(entity, true) then
                directx.draw_text(position.x, position.y, hacking_texts.vehicle[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                entity_mode = "vehicle"
            else
                directx.draw_text(position.x, position.y, hacking_texts.player[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                entity_mode = "player"
            end
        end
        if is_entity_a_vehicle(entity, true) then
            if not is_vehicle_seat_free(entity, -1, false) then
                local passenger = get_ped_in_vehicle_seat(entity, -1, false)
                if is_entity_a_ped(passenger) then
                    directx.draw_text(position.x, position.y, hacking_texts.vehicle[i], ALIGN_CENTRE, 0.5, {r = 1, g = 1, b = 1, a = 1}, true)
                    entity_mode = "vehicle"
