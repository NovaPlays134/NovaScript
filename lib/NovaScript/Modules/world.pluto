            if cursor_pos.x > pos.x1 and cursor_pos.x < pos.x2 and cursor_pos.y > pos.y1 and cursor_pos.y < pos.y2 then
                box_colors[i] = {r = 105/255, g = 105/255, b = 105/255, a = 177/255}
